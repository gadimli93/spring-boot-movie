<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jam2in.spring.boot.sample.repository.MovieRepository">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO movie (movName, movYear, movLang)
        VALUES (#{movName}, #{movYear}, #{movLang})
    </insert>

    <update id="update">
        UPDATE movie
        SET movName = #{movie.movName}, movYear = #{movie.movYear}, movLang = #{movie.movLang}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM movie
        WHERE id = #{id}
    </delete>

    <select id="select" resultType="com.jam2in.spring.boot.sample.dto.MovieDto">
        SELECT *
        FROM movie
        WHERE id = #{id}
    </select>

    <select id="selectByIdAndName" resultType="com.jam2in.spring.boot.sample.dto.MovieDto">
        SELECT *
        FROM movie
        WHERE id = #{id} AND movName = #{movName} <!-- AND movYear = #{movie.movYear} AND movLang = #{movie.movLang} -->
    </select>

    <select id="selectAllByLang" resultType="com.jam2in.spring.boot.sample.dto.MovieDto">
        SELECT *
        FROM movie
        WHERE movLang = #{movLang}
    </select>

    <select id="selectAllByYear" resultType="com.jam2in.spring.boot.sample.dto.MovieDto">
        SELECT *
        FROM movie
        WHERE movYear = #{movYear}
    </select>

    <select id="selectAllByName" resultType="com.jam2in.spring.boot.sample.dto.MovieDto">
        SELECT *
        FROM movie
        WHERE movName = #{movName}
    </select>

    <select id="selectAll" resultType="com.jam2in.spring.boot.sample.dto.MovieDto">
        SELECT *
        FROM movie;
    </select>

    <select id="selectAllByParam" resultType="com.jam2in.spring.boot.sample.dto.MovieDto">
        SELECT *
        FROM movie;
        WHERE movName = #{movName} AND movYear = #{movYear} AND  movLang = #{movLang}
    </select>

</mapper>
